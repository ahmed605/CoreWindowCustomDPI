<Page
    x:Class="CoreWindowCustomDPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoreWindowCustomDPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="StackPanel_Loaded">
        <TextBlock Text="Hello, XAML!" FontSize="32" HorizontalAlignment="Center"/>
        <Button Content="Hello!!" HorizontalAlignment="Center"/>
        <ComboBox HorizontalAlignment="Stretch">
            <ComboBoxItem>Test</ComboBoxItem>
            <ComboBoxItem>Works?</ComboBoxItem>
            <ComboBoxItem>Maybe?</ComboBoxItem>
            <ComboBoxItem>Let's try</ComboBoxItem>
        </ComboBox>
        <Slider x:Name="DpiSlider" Width="400" Minimum="100" Maximum="400" SnapsTo="Ticks" TickFrequency="25" TickPlacement="Outside"/>
    </StackPanel>
</Page>
